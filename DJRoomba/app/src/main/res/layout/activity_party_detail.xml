<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <include
        android:id="@+id/searchToolbar"
        layout="@layout/toolbar_search" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/playlistRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchToolbar"
        android:layout_above="@+id/mediaPlayerLayout">

    </android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:id="@+id/mediaPlayerLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@color/accent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/previousImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_skip_previous_black_24dp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/playMediaImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_play_arrow_black_24dp" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/pauseMediaImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_pause_circle_outline_black_24dp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/nextImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_skip_next_black_24dp" />

    </LinearLayout>

</RelativeLayout>